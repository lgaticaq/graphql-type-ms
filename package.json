{
  "name": "graphql-type-ms",
  "version": "1.0.0",
  "description": "ms scalar type for GraphQL.js",
  "main": "src",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier-standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "istanbul cover _mocha",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags && npm publish",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags && npm publish",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags && npm publish"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/graphql-type-ms.git"
  },
  "keywords": [
    "graphql",
    "ms"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/graphql-type-ms/issues"
  },
  "homepage": "https://github.com/lgaticaq/graphql-type-ms#readme",
  "dependencies": {},
  "devDependencies": {
    "chai": "4.3.4",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "3.1.0",
    "generate-changelog": "1.8.0",
    "graphql": "0.13.2",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "lint-staged": "7.3.0",
    "mocha": "10.2.0",
    "prettier-standard": "16.4.1"
  },
  "peerDependencies": {
    "graphql": ">=0.8.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      ":library"
    ]
  }
}
